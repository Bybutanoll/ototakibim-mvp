# Production Environment Configuration
NODE_ENV=production
NEXT_PUBLIC_API_URL=https://api.ototakibim.com
NEXT_PUBLIC_APP_URL=https://ototakibim.com
NEXT_PUBLIC_APP_NAME=OtoTakibim

# Stripe Configuration
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key

# Analytics Configuration
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
NEXT_PUBLIC_MIXPANEL_TOKEN=your-mixpanel-token

# Error Tracking
NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_AUTH_TOKEN=your-sentry-auth-token

# Performance Monitoring
NEXT_PUBLIC_NEW_RELIC_LICENSE_KEY=your-newrelic-license-key
NEXT_PUBLIC_NEW_RELIC_APP_NAME=OtoTakibim-Frontend

# CDN Configuration
NEXT_PUBLIC_CDN_URL=https://cdn.ototakibim.com
NEXT_PUBLIC_STATIC_FILES_URL=https://static.ototakibim.com

# Social Media Configuration
NEXT_PUBLIC_FACEBOOK_APP_ID=your-facebook-app-id
NEXT_PUBLIC_TWITTER_HANDLE=@ototakibim
NEXT_PUBLIC_LINKEDIN_URL=https://linkedin.com/company/ototakibim

# Contact Information
NEXT_PUBLIC_CONTACT_EMAIL=info@ototakibim.com
NEXT_PUBLIC_SUPPORT_EMAIL=support@ototakibim.com
NEXT_PUBLIC_PHONE=+90 212 555 0123

# Feature Flags
NEXT_PUBLIC_ENABLE_PWA=true
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_CHAT=true
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true

# Security Configuration
NEXT_PUBLIC_CSP_NONCE=your-csp-nonce
NEXT_PUBLIC_HSTS_MAX_AGE=31536000

# SEO Configuration
NEXT_PUBLIC_SITE_NAME=OtoTakibim
NEXT_PUBLIC_SITE_DESCRIPTION=AI Destekli Araç Sağlık Asistanı
NEXT_PUBLIC_SITE_KEYWORDS=araç takibi, araç bakımı, AI, yapay zeka, oto servis

# Domain Configuration
NEXT_PUBLIC_DOMAIN=ototakibim.com
NEXT_PUBLIC_SUBDOMAIN_API=api.ototakibim.com
NEXT_PUBLIC_SUBDOMAIN_CDN=cdn.ototakibim.com

# Build Configuration
NEXT_PUBLIC_BUILD_ID=production-build-001
NEXT_PUBLIC_BUILD_DATE=2024-01-01T00:00:00Z
NEXT_PUBLIC_VERSION=1.0.0

# Cache Configuration
NEXT_PUBLIC_CACHE_TTL=3600
NEXT_PUBLIC_CACHE_MAX_SIZE=1000

# Monitoring Configuration
NEXT_PUBLIC_ENABLE_METRICS=true
NEXT_PUBLIC_METRICS_ENDPOINT=https://metrics.ototakibim.com

# Development Tools (disabled in production)
NEXT_PUBLIC_ENABLE_DEV_TOOLS=false
NEXT_PUBLIC_ENABLE_DEBUG=false
NEXT_PUBLIC_ENABLE_HOT_RELOAD=false
